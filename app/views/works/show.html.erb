<style>
.panel-heading h3 {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: normal;
    width: 75%;
    padding-top: 8px;
}
h3 {
  display: inline-block;
  font-weight: bold;
}
h4 {
  display: inline-block;
}
.panel > .panel-heading-success{
    background-image: none;
    background-color: #5CB85C;
    color: white;
}
.white, .white a {
  color: #fff;
}
</style>

<p id="notice"><%= notice %></p>

<div class="col-sm-10 col-sm-offset-1">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title pull-left"><%= @work.category.name %></h3>
      <div class="clearfix"></div>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-3">
          FOTO PERFIL
        </div>
        <div class="col-xs-9">
          <h2><%= @work.user.first_name %> <%= @work.user.last_name %></h2>
          <br/>
          <h4><%= @work.title %></h4>
          <br/>
          <p style="text-align: justify;">
            <%= @work.description%>
          </p>
          <br/>
          <br/>
          <div class="panel panel-success pull-right">
            <div class="panel-heading panel-heading-success">
              <a href='<%= new_work_path %>'>
                <span class="glyphicon glyphicon-earphone white"></span>
              </a>
              <h4 class="white"><%= @work.user.phone_number %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
